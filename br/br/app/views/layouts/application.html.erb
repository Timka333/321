<!DOCTYPE html>
<html>
<head>
  <title>BudgetRhino</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Header -->
<div class="container_16" style="margin-top:15px;">
    <div class="grid_4">
      <h1>
        BudgetRhino
      </h1>
    </div>
    <!-- end .grid_4 -->
    <div class="grid_8 t_r">
      <%- if user_signed_in? %>
         <p> Hey, <%= current_user.email %> | <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %> </p>
       <%- else %>
          <button id="button">
            <a href="javascript:void(0);" data-reveal-id="sign_up">
              Free Account
            </a></button>
          <button id="button">
            <a href="javascript:void(0);" data-reveal-id="log_in">
              Sign In
            </a></button>
       <%- end %>
</div>
<!-- end .grid_8 -->
<div class="clear"></div>
      <div class="grid_12" id="content">

          <%= yield %>

      </div>










<!-- Footer -->

</body>
</html>
